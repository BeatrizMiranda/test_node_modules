{
  "name": "@driveway/react",
  "sideEffects": false,
  "version": "2.24.0",
  "description": "A library of components and utilities for Driveway.",
  "module": "./lib/index.js",
  "main": "./lib/index.js",
  "types": "./lib/types/index.d.ts",
  "scripts": {
    "lint-staged": "lint-staged",
    "build": "npm run clean && rollup -c --environment production",
    "build:dev": "npm run clean && rollup -c",
    "build:watch": "npm run clean && rollup -c -w --w.onBundleEnd 'npm pack'",
    "clean": "rm -rf lib",
    "package": "npm run build && npm pack",
    "package:dev": "npm run build:dev && npm pack",
    "lint": "tsc && eslint \"src/**/*.{js,ts,tsx}\"",
    "test": "jest --watch -c jest.config.js",
    "test:ci": "CI=true jest --reporters=jest-junit --coverage --coverageReporters=cobertura",
    "prepare": "husky install",
    "setversion": "node tools/packagejson version $GIT_SEM_VER"
  },
  "files": [
    "lib"
  ],
  "repository": {
    "type": "git",
    "url": "git@ssh.dev.azure.com:v3/Lithia-Digital/Roam/Driveway-React-Library"
  },
  "lint-staged": {
    "src/**/*.@(js|ts|tsx)": [
      "prettier --write",
      "eslint --fix",
      "git add -u"
    ]
  },
  "nyc": {
    "reporter": [
      "cobertura",
      "html",
      "json"
    ]
  },
  "author": "Driveway",
  "license": "ISC",
  "dependencies": {
    "@googlemaps/js-api-loader": "^1.11.3",
    "cancelable-promise": "^4.3.0",
    "es6-crawler-detect": "^3.3.0",
    "lottie-web": "^5.7.8",
    "react-intersection-observer": "^8.31.1",
    "react-number-format": "^4.5.5",
    "tss-react": "^4.3.3"
  },
  "peerDependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.9.3",
    "@mui/material": "^5.10.14",
    "react": "^17.0.2 || ^18.0.0",
    "react-dom": "^17.0.2 || ^18.0.0"
  },
  "devDependencies": {
    "@googlemaps/jest-mocks": "^2.7.2",
    "@rollup/plugin-image": "^2.1.1",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-typescript": "^8.3.3",
    "@rollup/plugin-url": "^7.0.0",
    "@svgr/rollup": "^6.3.0",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^7.0.0",
    "@testing-library/user-event": "^13.1.5",
    "@types/css-mediaquery": "^0.1.1",
    "@types/google.maps": "^3.48.6",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.157",
    "@types/react": "^17.0.5 || ^18.0.0",
    "@types/react-dom": "^17.0.5 || ^18.0.0",
    "@types/react-image-gallery": "^1.0.5",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "css-mediaquery": "^0.1.2",
    "eslint": "^8.13.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "jest-canvas-mock": "^2.5.0",
    "jest-fail-on-console": "^2.4.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-junit": "^13.2.0",
    "lint-staged": "^12.3.8",
    "prettier": "^2.6.2",
    "react-app-polyfill": "^3.0.0",
    "rollup": "^2.77.0",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^27.1.4",
    "typescript": "^4.5.4"
  }
}